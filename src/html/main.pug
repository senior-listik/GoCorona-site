mixin value(num)
    div.body-statistics-experts__value= num
mixin text(title)
    div.body-statistics-experts__text= title
mixin iconCard(cardIcon, cardTitle, cardText, num)
    .healthcare__columns(class="healthcare__columns" + num)
        .healthcare__item.item-healthcare
            .item-healthcare__icon
                svg
                    use(xlink:href="@img/icons/icons.svg#" + cardIcon)
            .item-healthcare__title= cardTitle
            .item-healthcare__text= cardText

